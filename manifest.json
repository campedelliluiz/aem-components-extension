{
  "name": "AEM Component Finder",
  "description": "A tool to help identify which Adobe Classic component has been used on the page",
  "version": "1.0.0",
  "manifest_version": 2,
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["jquery.js"],
    "matches": [
        "https://*/*",
        "http://*/*"
    ]
  }],
  "background" : {
    "scripts" : [
        "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "lupa.png"
  },
  "permissions": [
    "activeTab"
  ]
}